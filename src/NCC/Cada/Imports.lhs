    {----------------------------------------------------------------------}
    {-- Module Imports                                                    -}
    {----------------------------------------------------------------------}

>   extract' :: Definition Loc -> Accum ModuleName
>   extract' (ImportDef m) = consA m
>   extract' _             = id
    
>   extract :: [Definition Loc] -> [ModuleName]
>   extract = foldr extract' []
    
>   collectImports :: [LocP Definition] -> [ModuleName]
>   collectImports = extract . map unL

